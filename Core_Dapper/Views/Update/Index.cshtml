@model  IAlbumDto
@{
    ViewData["Title"] = "Index";
}

<h2>Update</h2>

<form method="put" asp-action="UpdateAsync" asp-controller="Update">
    <dl>
        <dt>@Html.LabelFor(m => m.AlbumID)</dt>
        <dd>@Html.TextBoxFor(m => m.AlbumID)</dd>
        <dt>@Html.LabelFor(m => m.AlbumName)</dt>
        <dd>@Html.TextBoxFor(m => m.AlbumName)</dd>
        <dt>@Html.LabelFor(m => m.Artist)</dt>
        <dd>@Html.TextBoxFor(m => m.Artist)</dd>
        <dt>@Html.LabelFor(m => m.Genre)</dt>
        <dd>@Html.TextBoxFor(m => m.Genre)</dd>
        <dt>@Html.LabelFor(m => m.ReleaseYear)</dt>
        <dd>@Html.TextBoxFor(m => m.ReleaseYear)</dd>
        <dt>@Html.LabelFor(m => m.NumberOfTracks)</dt>
        <dd>@Html.TextBoxFor(m => m.NumberOfTracks)</dd>
        <dt>@Html.LabelFor(m => m.Cost)</dt>
        <dd>@Html.TextBoxFor(m => m.Cost)</dd>
    </dl>
    <input type="submit" class="btn btn-default" value="Update" name="btnUpdate" />
    <input type="submit" class="btn btn-default" value="UpdateAsync" name="btnUpdate" />

</form>
<div>
    <a href="/Home/Index" class="btn btn-default">Back</a>
</div>

